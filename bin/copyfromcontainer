#!/bin/bash
[ -z "$1" ] && echo "Please specify a directory or file to copy from container (ex. vendor, --all)" && exit

source ./conf/project.conf

REAL_SRC=$(cd -P "src" && pwd)
if [ "$1" == "--all" ]; then
  docker cp $(docker-compose ps -q ${DOCKER_SERVICE_PHP}|awk '{print $1}'):/var/www/html/./ $REAL_SRC/
  echo "Completed copying all files from container to host"
else
  docker cp $(docker-compose ps -q ${DOCKER_SERVICE_PHP}|awk '{print $1}'):/var/www/html/$1 $REAL_SRC/
  echo "Completed copying $1 from container to host"
fi
